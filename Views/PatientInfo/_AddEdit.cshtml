<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>
    function updateAgeField(dob) {
        if (!isNaN(dob.getTime())) {  // Check if the date is valid
            var currentDate = new Date();
            var age = currentDate.getFullYear() - dob.getFullYear();

            // Check if we have passed the birthday in the current year, if not subtract 1 from age
            if (currentDate.getMonth() < dob.getMonth() ||
                (currentDate.getMonth() === dob.getMonth() && currentDate.getDate() < dob.getDate())) {
                age--;
            }

            $("#age").val(age);
        }
    }

    $(document).ready(function () {
        // Update age based on initial DOB when page loads
        var initialDOB = new Date($("#dob").val());
        updateAgeField(initialDOB);

        // When age is changed, update DoB
        $("#age").on("input", function () {
            var age = parseInt($(this).val());
            if (!isNaN(age)) {
                var currentDate = new Date();
                var birthYear = currentDate.getFullYear() - age;
                var dob = birthYear + "-01-01"; // Set to the first of January of the birth year as a baseline.
                $("#dob").val(dob);
            }
        });

        // When DoB is changed, update age
        $("#dob").on("input", function () {
            var dob = new Date($(this).val());
            updateAgeField(dob);
        }); 
        
        // Toggle Guardian detail section
        $('#chkHasGuardian').change(function () {
            if ($(this).is(':checked')) {
                $('#guardianDetails').show();
            } else {
                $('#guardianDetails').hide();
            }
        });
    });
</script>
