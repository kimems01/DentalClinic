@model HMS.Models.PaymentsViewModel.PaymentsReportViewModel

<partial name="~/Views/UIComponents/_bootstrapAlert.cshtml" />
<div class="row">
    <input type="hidden" id="CurrentURL" asp-for="PaymentsCRUDViewModel.CurrentURL" />
    <div class="col-sm-12">
        <div class="panel-footer text-right">
            <button class="btn btn-success" onclick="ThermalPrintPaymentReceipt('@Model.PaymentsCRUDViewModel.VisitId', '@Model.PaymentsCRUDViewModel.Id')"><span class="fa fa-print">Thermal</span></button>
            <button class="btn btn-info" onclick="printDiv('printableArea')"><span class="fa fa-print"></span></button>
            <button class="btn btn-info" onclick="DownloadPaymentReceiptReportPDF('@Model.PaymentsCRUDViewModel.Id')"><span class="fa fa-download"></span></button>

            <button class="btn btn-dark" onclick="BacktoPreviousPage()">Back</button>
        </div>

        <div id="printableArea">
            <partial name="~/Views/DownloadReport/_ReceiptCompanyBanner.cshtml" />
            <hr />
            <partial name="~/Views/DownloadReport/_PaymentReceiptPrintableArea.cshtml" />
        </div>
    </div>
</div>

<script>
    var DownloadPaymentReceiptReportPDF = function (PaymentId) {
        location.href = "/DownloadReport/DownloadPaymentReceiptReportPDF?_PaymentId=" + PaymentId;
    };

    var ThermalPrintPaymentReceipt = function (VisitId, PaymentId) {
        location.href = "/Payments/ThermalPrintPaymentReceipt?_VisitId=" + VisitId + "&_PaymentId= " + PaymentId;
    };
</script>

